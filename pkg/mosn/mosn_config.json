{
  "servers": [
    {
      "access_log": "/home/admin/logs/mosn/default.log",
      "log_level": "INFO",
      "network_filters": [
        {
          "type": "proxy",
          "config": {
            "downstream_protocol": "SofaRpc",
            "upstream_protocol": "Http2",
            "routes": [
              {
                "name": "example_route",
                "service": ".*",
                "cluster": "local_service"
              }
            ]
          }
        }
      ],
      "stream_filters": [
        {
          "type": "fault_inject",
          "config": {
            "delay_percent": 100,
            "delay_duration_ms": 2000
          }
        },
        {
          "type": "healthcheck",
          "config": {
            "passthrough": false,
            "cache_time_ms": 360000,
            "cluster_min_healthy_percentages": {
              "local_service": 70
            }
          }
        }
      ],
      "listeners": [
        {
          "name": "default_sofa",
          "address": "127.0.0.1:12200",
          "bind_port": true
        },
        {
          "name": "extra_sofa",
          "address": "127.0.0.1:12201",
          "bind_port": true
        }
      ]
    }
  ],
  "tracing": {
    "http": {
      "driver": {
        "type": "zipkin",
        "config": {
          "collector_cluster": "jaeger",
          "collector_endpoint": "/api/v1/spans"
        }
      }
    }
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "local_service",
        "type": "SIMPLE",
        "lb_type": "LB_RANDOM",
        "max_request_per_conn": 100000,
        "healthcheck": {
          "timeout": 1000,
          "healthy_threshold": 3,
          "unhealthy_threshold": 5,
          "interval": 6000,
          "interval_jitter": 1000
        },
        "hosts": [
          {
            "hostname": "local_upstream",
            "address": "127.0.0.1:12345",
            "weight": 1
          }
        ]
      },
      {
        "name": "local_service_2",
        "type": "SIMPLE",
        "lb_type": "LB_RANDOM",
        "hosts": [
          {
            "hostname": "local_upstream",
            "address": "127.0.0.1:12345",
            "weight": 10
          },
          {
            "hostname": "local_upstream",
            "address": "127.0.0.1:12346",
            "weight": 90
          }
        ]
      }
    ]
  }
}